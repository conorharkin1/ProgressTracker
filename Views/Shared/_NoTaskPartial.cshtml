@model string
@{
    int objectiveCount;
}
@{
    objectiveCount = Model switch
    {
        "small" => 2,
        "medium" => 4,
        "large" => 6,
        _ => 0
    };
}
<div class="container task-header">
    <div class="task-header-left">
        @* Placeholder *@
    </div>
    <div class="task-header-centre">
        <h4>No Task yet</h4>
    </div>
    <div class="task-header-right">
        @* Placeholder *@
    </div>
</div>
<div class="add-task-body">
    <button class="btn" id="add-task-btn" data-bs-toggle="modal" data-bs-target="#taskModal" data-objective-count="@objectiveCount">
        <i class="bi bi-plus-circle"></i>
    </button>
</div>