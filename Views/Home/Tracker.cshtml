@{
    ViewData["Title"] = "ProgressTracker";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/tracker.css"/>

</head>
<body>
   <div class="container-fluid p-0">
        <div class="row">
            <div class="col-md-3 p-0">
                <div class="container-fluid p-0">
                    <div class="small-task">
                        @await Html.PartialAsync("_smallTaskPartial")
                    </div>
                    <div class="small-task">
                        @await Html.PartialAsync("_smallTaskPartial")
                    </div>
                </div>
            </div>

            <div class="col-md-6 p-0">
                <div class="container-fluid p-0">
                    <div class="medium-task">
                        @await Html.PartialAsync("_MediumTaskPartial")
                    </div>
                    <div class="large-task">
                        @await Html.PartialAsync("_LargeTaskPartial")
                    </div>
                    <div class="medium-task">
                        @await Html.PartialAsync("_MediumTaskPartial")
                    </div>
                </div>
            </div>

            <div class="col-md-3 p-0">
                <div class="container-fluid p-0">
                    <div class="small-task">
                        @await Html.PartialAsync("_smallTaskPartial")
                    </div>
                    <div class="small-task">
                        @await Html.PartialAsync("_smallTaskPartial")
                    </div>
                </div>
            </div>       
        </div>
   </div>
</body>

