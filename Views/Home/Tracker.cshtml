@model ProgressTracker.Models.ViewModels.TasksViewModel;
@{
    ViewData["Title"] = "ProgressTracker";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/tracker.css"/>
</head>
<body>
    <div class="row">
        <div class="col-md-3">
            <div class="task-container-fluid">
                <div class="small-task">
                    @await Html.PartialAsync("_SmallTaskPartial", Model.SmallTasks[0])
                </div>
                <div class="small-task">
                    @await Html.PartialAsync("_SmallTaskPartial", Model.SmallTasks[1])
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="task-container-fluid">
                <div class="medium-task">
                    @await Html.PartialAsync("_MediumTaskPartial", Model.MediumTasks[0])
                </div>
                <div class="large-task">
                    @await Html.PartialAsync("_LargeTaskPartial", Model.LargeTask)
                </div>
                <div class="medium-task">
                    @await Html.PartialAsync("_MediumTaskPartial", Model.MediumTasks[1])
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="task-container-fluid">
                <div class="small-task">
                    @await Html.PartialAsync("_SmallTaskPartial", Model.SmallTasks[2])
                </div>
                <div class="small-task">
                    @await Html.PartialAsync("_SmallTaskPartial", Model.SmallTasks[3])
                </div>
            </div>
        </div>       
    </div>
</body>
