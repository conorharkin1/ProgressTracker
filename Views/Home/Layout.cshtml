<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/tracker.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <div class="navbar-section left">
                <a asp-controller="Home" asp-action="Tracker"><img class="logo" src="~/Images/logo.png" alt="Home"></a>
            </div>
            <div class="navbar-section center">
                <h2>Progress Tracker</h2>
            </div>
            <div class="navbar-section right">
                <a asp-controller="Home" asp-action="Focus"><h2>Focus</h2></a>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/add-task.js" asp-append-version="true"></script>
</body>
</html>
